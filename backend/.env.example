# App settings
SECRET_KEY=your_secret_key_here
PROJECT_NAME="Telegram Shop API"
API_V1_STR="/api/v1"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://your-domain.com"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=telegram_shop
SQLALCHEMY_DATABASE_URI=postgresql://postgres:postgres@localhost/telegram_shop

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Frontend
FRONTEND_URL=https://your-domain.com

# Stripe
PAYMENT_PROVIDERS__stripe__enabled=true
PAYMENT_PROVIDERS__stripe__api_key=your_stripe_api_key
PAYMENT_PROVIDERS__stripe__webhook_secret=your_stripe_webhook_secret

# PayPal
PAYMENT_PROVIDERS__paypal__enabled=false
PAYMENT_PROVIDERS__paypal__client_id=your_paypal_client_id
PAYMENT_PROVIDERS__paypal__secret=your_paypal_secret
PAYMENT_PROVIDERS__paypal__sandbox=true
PAYMENT_PROVIDERS__paypal__webhook_id=your_paypal_webhook_id

# YooKassa
PAYMENT_PROVIDERS__yookassa__enabled=false
PAYMENT_PROVIDERS__yookassa__shop_id=your_yookassa_shop_id
PAYMENT_PROVIDERS__yookassa__secret_key=your_yookassa_secret_key

# Storage
STORAGE_TYPE=local  # local, s3, etc.
STORAGE_LOCAL_PATH=./uploads
STORAGE_S3_BUCKET=your-s3-bucket
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=your_s3_access_key
STORAGE_S3_SECRET_KEY=your_s3_secret_key
